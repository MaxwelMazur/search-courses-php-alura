{
    "name": "maxwelmazur/buscador-cursos",
    "description": "Projeto que busca os cursos no site da alura",
    "type": "library",
    "authors": [
        {
            "name": "MaxwelMazur",
            "email": "maxwel.mazur@hotmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.3",
        "symfony/dom-crawler": "^4.2",
        "symfony/css-selector": "^5.2"
    },
    "autoload": {
        "classmap": [
            "./Teste.php"
        ],
        "files": ["./utils.php"],
        "psr-4": {
            "Max\\BuscadorDeCursos\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^3.5",
        "phan/phan": "^4.0"
    },
    "scripts": {
        "test": "phpunit tests\\TestBuscadorDeCursos.php",
        "cs": "phpcs --standard=PSR12 src/",
        "phan": "phan --allow-polyfill-parser",
        "check": [
            "@phan",
            "@cs",
            "@test"
        ],
        "post-update-cmd": [
            "@test"
        ]
    },
    "scripts-descriptions": {
        "check": "Roda as ferramentas do c√≥digo. PHAN, PHPCS e PHPUNIT"
    }
}
